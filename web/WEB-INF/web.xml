<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>RegisterUser</servlet-name>
        <servlet-class>servlets.RegisterUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticateUser</servlet-name>
        <servlet-class>servlets.AuthenticateUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMessageServlet</servlet-name>
        <servlet-class>servlets.SendMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublishServlet</servlet-name>
        <servlet-class>servlets.PublishServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicationPageServlet</servlet-name>
        <servlet-class>servlets.PublicationPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayPublicationServlet</servlet-name>
        <servlet-class>servlets.DisplayPublicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDisplayServlet</servlet-name>
        <servlet-class>servlets.UserDisplayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageLoadServlet</servlet-name>
        <servlet-class>servlets.MessageLoadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToCheck</servlet-name>
        <servlet-class>servlets.ToCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterUser</servlet-name>
        <url-pattern>/RegisterUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticateUser</servlet-name>
        <url-pattern>/AuthenticateUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMessageServlet</servlet-name>
        <url-pattern>/SendMessageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublishServlet</servlet-name>
        <url-pattern>/PublishServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicationPageServlet</servlet-name>
        <url-pattern>/PublicationPageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayPublicationServlet</servlet-name>
        <url-pattern>/DisplayPublicationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDisplayServlet</servlet-name>
        <url-pattern>/UserDisplayServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageLoadServlet</servlet-name>
        <url-pattern>/MessageLoadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToCheck</servlet-name>
        <url-pattern>/ToCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
